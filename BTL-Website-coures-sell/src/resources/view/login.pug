block content 
    .login-form
        form(action='' method='')
            .avatar
                img(src='https://cdn-icons-png.flaticon.com/512/149/149071.png' alt='Avatar')
            h2.text-center Member Login
            .form-group
                input#Email.form-control(type='email' name='email' placeholder='Email' required='required')
            .form-group
                input#Password.form-control(type='password' name='password' placeholder='Password' required='required')
            
            .form-group.signin
                button.btn.btn-primary.btn-lg.btn-block.btn-form-login Sign in

                //- ////
            .alert-message.alert-sussess
