#main-wrapper(data-layout='vertical' data-navbarbg='skin5' data-sidebartype='full' data-sidebar-position='absolute' data-header-position='absolute' data-boxed-layout='full')

  header.topbar(data-navbarbg='skin5')
    nav.navbar.top-navbar.navbar-expand-md.navbar-dark
      .navbar-header(data-logobg='skin6')
       
        a.navbar-brand(href='/')
          //- b.logo-icon
          //-   img(src='/Bootstrap_plugins_admin/images/logo-icon.png' alt='homepage')
          span.logo-text
            // dark Logo text
            img(src='/Bootstrap_plugins_admin/images/logo-text.png' alt='homepage')
      
        a.nav-toggler.waves-effect.waves-light.text-dark.d-block.d-md-none(href='javascript:void(0)')
          i.ti-menu.ti-close
      // ==============================================================
      // End Logo
      // ==============================================================
      #navbarSupportedContent.navbar-collapse.collapse(data-navbarbg='skin5')
        ul.navbar-nav.d-none.d-md-block.d-lg-none
          li.nav-item
            a.nav-toggler.nav-link.waves-effect.waves-light.text-white(href='javascript:void(0)')
              i.ti-menu.ti-close
        // ==============================================================
        // Right side toggle and nav items
        // ==============================================================
        ul.navbar-nav.ms-auto.d-flex.align-items-center
          // ==============================================================
          // Search
          // ==============================================================
          li.in
            form.app-search.d-none.d-md-block.me-3(role='search')
              input.form-control.mt-0(type='text' placeholder='Search...')
              a.active(href='')
                i.fa.fa-search
        
          li
            a.profile-pic(href='/admin/profine')
              img.img-circle(src='/Bootstrap_plugins_admin/images/users/varun.jpg' alt='user-img' width='36')
              span.text-white.font-medium Steave
         
  aside.left-sidebar(data-sidebarbg='skin6')
    // Sidebar scroll
    .scroll-sidebar
      // Sidebar navigation
      nav.sidebar-nav
        ul#sidebarnav
          // User Profile
          li.sidebar-item.pt-2
            a.sidebar-link.waves-effect.waves-dark.sidebar-link(href='/admin/dashboard' aria-expanded='false')
              i.far.fa-clock(aria-hidden='true')
              span.hide-menu Dashboard
          li.sidebar-item
            a.sidebar-link.waves-effect.waves-dark.sidebar-link(href='/admin/profine' aria-expanded='false')
              i.fa.fa-user(aria-hidden='true')
              span.hide-menu Profile
          li.sidebar-item
            a.sidebar-link.waves-effect.waves-dark.sidebar-link(href='basic-table.html' aria-expanded='false')
              i.fa.fa-table(aria-hidden='true')
              span.hide-menu Basic Table
          li.sidebar-item
            a.sidebar-link.waves-effect.waves-dark.sidebar-link(href='fontawesome.html' aria-expanded='false')
              i.fa.fa-font(aria-hidden='true')
              span.hide-menu Icon
          li.sidebar-item
            a.sidebar-link.waves-effect.waves-dark.sidebar-link(href='/CreateCoures' aria-expanded='false')
              i.fa.fa-globe(aria-hidden='true')
              span.hide-menu CreateCoures
          li.sidebar-item
            a.sidebar-link.waves-effect.waves-dark.sidebar-link(href='blank.html' aria-expanded='false')
              i.fa.fa-columns(aria-hidden='true')
              span.hide-menu Blank Page
          li.sidebar-item
            a.sidebar-link.waves-effect.waves-dark.sidebar-link(href='404.html' aria-expanded='false')
              i.fa.fa-info-circle(aria-hidden='true')
              span.hide-menu Error 404
          li.text-center.p-20.upgrade-btn
            a.btn.d-grid.btn-danger.text-white(href='' target='_blank')
              | Test

  .page-wrapper
    // ==============================================================
    // Bread crumb and right sidebar toggle
    // ==============================================================
    .page-breadcrumb.bg-white
      .row.align-items-center
        .col-lg-3.col-md-4.col-sm-4.col-xs-12
          h4.page-title Profile page
        .col-lg-9.col-sm-8.col-md-8.col-xs-12
          .d-md-flex
            ol.breadcrumb.ms-auto
              li
                a.fw-normal(href='#') Dashboard
            a.btn.btn-danger.d-none.d-md-block.pull-right.ms-3.hidden-xs.hidden-sm.waves-effect.waves-light.text-white(href='https://www.wrappixel.com/templates/ampleadmin/' target='_blank')
              | Upgrade
              | to Pro
 
    
            
        form.top.form(method='' action='')
            .container
                
                .form-group
                    h1.text Tạo Khóa Học
                    label.text(for='name') Tên Khóa Học
                    input#exampleInputEmail1.create_name.form-control(type='text' placeholder='nhập thông tin' name='name')
                    small#emailHelp.form-text.text-muted.text Hãy Nhập Thông Tin Chính Xác.
                .form-group
                    label.text(for='mota') Tên Bài
                    input#exampleInputtenbai.form-control(type='text' placeholder='nhập thông tin' name='tenbai')
                .form-group
                    label.text(for='mota') Mô Tả Khóa Học
                    input#exampleInputPassword1.create_mota.form-control(type='text' placeholder='nhập thông tin' name='mota')
                .form-group
                    label.text(for='videoId') Video ID
                    input#exampleInputvideoId.create_videoId.form-control(type='text' placeholder='video ID' name='videoId')
                .form-group
                    label.text(for='level') Trinh Độ
                    input#exampleInputlevel.create_level.form-control(type='text' placeholder='Trình Độ' name='level')
                button#btn_createCoures.btn.btn-primary Submit
    

    footer.footer.text-center
